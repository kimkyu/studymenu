<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/UserImage_Id"
            android:layout_width="259dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            app:srcCompat="@drawable/loading_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Nickname_Id"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Email_Id"
                android:layout_marginTop="76dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="닉네임"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Email_Id"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Comment_Id"
                android:layout_marginTop="28dp"
                android:text="이메일"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Comment_Id"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="49dp"
                android:layout_marginStart="27dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:text="상태메시지"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Logout_Button_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="로그아웃"
        android:textSize="18dp" />

</LinearLayout>
